[run]
# Coverage configuration for Diplomacy project
source = src/engine, src/server
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */migrations/*
    */alembic/*
    */venv/*
    */env/*
    */.*
    setup.py
    conftest.py

# Branch coverage
branch = True

# Data file location
data_file = .coverage

[report]
# Coverage report settings
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

    # Don't complain about abstract methods, they aren't run:
    @(abc\.)?abstractmethod

# Minimum coverage threshold
fail_under = 85

# Show missing lines
show_missing = True

# Precision for percentages
precision = 2

# Skip covered files in report
skip_covered = False

[html]
# HTML report settings
directory = htmlcov
title = Diplomacy Test Coverage Report

[xml]
# XML report settings
output = coverage.xml
